<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="4dp"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="4dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.anant.smartagro.MainActivity"
    tools:showIn="@layout/app_bar_main"
    android:layout_marginTop="50dp"
    android:layout_marginBottom="40dp">

    <Button
        android:id="@+id/Suggest"
        android:layout_width="160dp"
        android:layout_height="225dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/prediction"
        android:fontFamily="sans-serif-medium"
        android:onClick="suggest_crop"
        android:text="Suggest Crop"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textStyle="normal|bold" />

    <Button
        android:id="@+id/button2"
        android:layout_width="160dp"
        android:layout_height="225dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/maintain"
        android:onClick="live_feed"
        android:text="Live Feed"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textStyle="normal|bold" />

    <Button
        android:id="@+id/button3"
        android:layout_width="160dp"
        android:layout_height="225dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/feed"
        android:text="Agro Feed"
        android:onClick="agro_feed"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textStyle="normal|bold" />

    <Button
        android:id="@+id/button4"
        android:layout_width="160dp"
        android:layout_height="225dp"
        android:layout_alignLeft="@+id/button2"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/button2"
        android:background="@drawable/query"
        android:onClick="query"
        android:text="Query"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textStyle="normal|bold" />
</RelativeLayout>
